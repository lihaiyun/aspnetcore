@page
@model MyApplication.Pages.CalculatorModel
@{
    ViewData["Title"] = "Calculator";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<form class="mt-3" method="post">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Number 1</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Num1" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Number 2</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Num2" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Operator</label>
        <div class="col-sm-10">
            @*<select class="form-select" asp-for="Operator">
                <option value="" selected>-- Select --</option>
                <option>+</option>
                <option>-</option>
                <option>x</option>
                <option>/</option>
            </select>*@
            @Html.DropDownListFor(m => m.Operator, new SelectList(Model.OperatorList), "-- Select --", new {@class = "form-select"})
        </div>
        
    </div>
    <button type="submit" class="btn btn-primary">=</button>
</form>

<p class="mt-3">@Model.Result</p>